;;; Allow only node & npm versions stated in package.json::engines
engine-strict=true
;;; pnpm: Automatically use specified node in this project
use-node-version = 18.15.0
pnpm-version = 8.1.1
;;; pnpm: Disable version update reminders
update-notifier=false
;;; allow installing a single package only
recursive-install = false
;; needed due to a bug in `recursive-install`
;; ref 1: https://github.com/pnpm/pnpm/issues/6300
;; ref 2: https://github.com/pnpm/pnpm/issues/5508
dedupe-peer-dependents = false